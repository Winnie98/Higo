<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_product_user_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/avatar"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/txt_product_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/txt_product_publish_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="发布时间"
                android:textSize="16sp"
                android:gravity="bottom"
                android:paddingBottom="5dp"/>

            <Button
                android:id="@+id/btn_product_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="代/求购"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/lable_type"/>


        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_product"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:src="@mipmap/avatar"
        android:scaleType="centerCrop"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/txt_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="商品主标题"
        android:textSize="20dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/unit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="￥"
            android:textColor="@color/app_main"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txt_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/unit1"
            android:text="89.64"
            android:textColor="@color/app_main"
            android:textSize="21sp" />

    </RelativeLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_main"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_close_reset"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_close_white_24dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="重置密码"
                android:textColor="@android:color/white"
                android:textSize="25sp" />
        </RelativeLayout>


    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="手机号："
        android:textSize="20sp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_reset_pwd_phone"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="16sp"
        android:background="@android:color/white"
        android:paddingLeft="15dp"
        android:gravity="center_vertical" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="密码："
        android:textSize="20sp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"/>
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/edt_reset_pwd_password"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="16sp"
        android:hint="至少输入6位数字或字母"
        android:background="@android:color/white"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:inputType="textPassword"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="确认密码："
        android:textSize="20sp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"/>
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/edt_reset_pwd_re_password"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="16sp"
        android:hint="至少输入6位数字或字母"
        android:background="@android:color/white"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btn_reset_pwd_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:background="@drawable/border_sure"
        android:layout_margin="20dp"
        />

</android.support.v7.widget.LinearLayoutCompat>